class Timer:
    def __init__(self, hours, minutes, seconds):
        self.__hours = hours
        self.__minutes = minutes
        self.__seconds = seconds
    
    
    # custom function to format the time
    def formatDate(self):
        
        # create list from all the parameters
        
        list = [self.__hours, self.__minutes, self.__seconds]
        
        # loop through the list to convert it into str and 00 format if less than 10
        
        for i in range(len(list)):
            if list[i] < 10:
                list[i] = "0" + str(list[i])
            else:
                list[i] = str(list[i])

        formatted_date = ":".join(list)

        return formatted_date
    
        

    def __str__(self):
        
        # call the class method to format the date
        
        formatted_date = self.formatDate()
        
        return formatted_date



    def next_second(self):
        
        # updates all the sections as a minute or hour cannot be >= 60
        # hour cannot be greater than 23
        
        self.__seconds += 1
        
        if self.__seconds == 60:
            self.__seconds = self.__seconds % 60
            self.__minutes += 1
            if self.__minutes == 60:
                self.__minutes = self.__minutes % 60
                self.__hours += 1
                if self.__hours == 24:
                    self.__hours = 0
                    
        return self.__seconds
        
        

    def prev_second(self):
        
        self.__seconds -= 1
        
        # updates all the sections as a minute or hour cannot be >= 60
        # hour cannot be greater than 23
        
        if self.__seconds < 0 :
            self.__seconds = 59
            self.__minutes -= 1
            if self.__minutes < 0 :
                self.__minutes = 59
                self.__hours -= 1
                if self.__hours < 0:
                    self.__hours = 23
                    
        return self.__seconds




timer = Timer(23, 59, 59)
print(timer)
timer.next_second()
print(timer)
timer.prev_second()
print(timer)


# Output:
    
# 23:59:59
# 00:00:00
# 23:59:59
