# patterns for digits 0 to 9
patterns = [
    [
        "###",
        "# #",
        "# #",
        "# #",
        "###"
    ],
    [
        "  #",
        "  #",
        "  #",
        "  #",
        "  #"
    ],
    [
        "###",
        "  #",
        "###",
        "#  ",
        "###"
    ],
    [
        "###",
        "  #",
        "###",
        "  #",
        "###"
    ],
    [
        "# #",
        "# #",
        "###",
        "  #",
        "  #"
    ],
    [
        "###",
        "#  ",
        "###",
        "  #",
        "###"
    ],
    [
        "###",
        "#  ",
        "###",
        "# #",
        "###"
    ],
    [
        "###",
        "  #",
        "  #",
        "  #",
        "  #"
    ],
    [
        "###",
        "# #",
        "###",
        "# #",
        "###"
    ],
    [
        "###",
        "# #",
        "###",
        "  #",
        "###"
    ]
]

def display_number(number):
    
    # convert the number to a string
    number_str = str(number)
    
    # initialize the display with a list containing 5 empty strings
    display = [""] * 5
    
    # iterate over each digit in the number
    for digit in number_str:
        
        # get the pattern for the current digit
        digit_pattern = patterns[int(digit)]
        
        # add each row of the digit pattern to the display
        for i in range(5):
            display[i] += digit_pattern[i] + " "
    

    for row in display:
        print(row)


number = int(input("Enter a non-negative integer number: "))

# Display the number
display_number(number)

# Output:
    
# Enter a non-negative integer number: 123
#   # ### ### 
#   #   #   # 
#   # ### ### 
#   # #     # 
#   # ### ### 
